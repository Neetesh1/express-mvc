<%- include('partials/head', { pageTitle: 'AddHome' }) %>
  </head>
  <body class="bg-gray-50 min-h-screen flex flex-col">
    <%- include('partials/header') %>
    <main class="flex-1 flex items-center justify-center">
      <section class="bg-white rounded-lg shadow-lg p-8 w-full max-w-md">
        <h2 class="text-xl font-semibold mb-4 text-pink-700">Register your home here!</h2>
        <form action="/host/add-home" method="POST" class="space-y-4" enctype="multipart/form-data">
          <div>
            <label for="homeName" class="block font-medium mb-1">Home Name:</label>
            <input type="text" id="homeName" name="homeName" required class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400" />
          </div>
          <div>
            <label for="location" class="block font-medium mb-1">Location:</label>
            <input type="text" id="location" name="location" required class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400" />
          </div>
          <div>
            <label for="price" class="block font-medium mb-1">Price:</label>
            <input type="number" id="price" name="price" required class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400" />
          </div>
          <div>
            <label for="description" class="block font-medium mb-1">Description:</label>
            <textarea id="description" name="description" rows="4" class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400"></textarea>
          </div>
          <div>
            <label for="photo" class="block font-medium mb-1">home Photo:</label>
            <input type="file" id="photo" name="photo" accept="image/*" class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400" />
          </div>
          <div>
            <label for="Rating" class="block font-medium mb-1">Rating:</label>
            <input type="number" id="Rating" name="Rating" min="1" max="5" step="0.1" class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400" />
          </div>
            
          <button type="submit" class="w-full bg-pink-600 text-white py-2 rounded font-semibold hover:bg-pink-700">Add Home</button>
        </form>
        <p class="mb-5 mt-5 text-pink-400 text-right">
          <a href="/" class="hover:underlin e">Return to the home page</a>.
        </p>
      </section>
    </main>
    <%- include('partials/footer') %>
  </body>
</html>
